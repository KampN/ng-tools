{
	"compileOnSave": false,
	"compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "es2020",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@kamp-n/gads-preview": [
        "dist/google-ads-preview/google-ads-preview",
        "dist/google-ads-preview"
      ],
      "@kamp-n/ng-logger": [
        "dist/ng-logger/ng-logger",
        "dist/ng-logger"
      ],
      "@kamp-n/ng-common-tools": [
        "dist/ng-common-tools/ng-common-tools",
        "dist/ng-common-tools"
      ],
      "@kamp-n/ng-common-form": [
        "dist/ng-common-form/ng-common-form",
        "dist/ng-common-form"
      ],
      "@kamp-n/ng-logger-fs": [
        "dist/ng-logger-fs/ng-logger-fs",
        "dist/ng-logger-fs"
      ]
    },
    "useDefineForClassFields": false
  },
	"angularCompilerOptions": {
	  "enableI18nLegacyMessageIdFormat": false,
	  "strictInjectionParameters": true,
	  "strictInputAccessModifiers": true,
	  "strictTemplates": true
	}
}
